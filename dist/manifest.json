{
  "manifest_version": 2,
  "name": "Thankful",
  "version": "0.6.5",
  "description": "",
  "icons": {
    "64": "icons/handshake.png"
  },
  "browser_action": {
    "default_icon": "icons/handshake.png",
    "default_title": "Thankful",
    "default_popup": "popup/index.html",
    "browser_style": true
  },
  "background": {
    "scripts": ["background/index.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content_youtube/index.js"]
    },
    {
      "matches": ["*://*.medium.com/*"],
      "js": ["content_medium/index.js"]
    }
  ],
  "content_security_policy":
    "script-src 'self' 'http://localhost:8098'; object-src 'self'",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "alarms",
    "idle",
    "notifications"
  ]
}
